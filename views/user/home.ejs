
<%-include("../../views/partials/user/header")%>
    <!-- Header Section End -->
<style>
    .banner__item__pic img {
    width: 100%;
    height: 500px; 
    object-fit: cover;
}
.product-card-simple {
  background: linear-gradient(135deg, #ff0000, #2c2c2c);
  transition: all 0.3s ease-in-out;
  border: 1px solid #eee;
  border-radius: 12px;
}

.product-card-simple:hover {
  transform: translateY(-6px);
  box-shadow: 0 10px 25px #cbaf4814;
  border-color: #ddd;
  border-radius: 10px;
}

.product-img-hover {
  transition: transform 0.3s ease;
}

.product-img-hover:hover {
  transform: scale(1.05);
}
</style>

    <section class="hero">
        <div class="hero__slider owl-carousel">
            <div class="hero__items set-bg" data-setbg="img/hero/home10.jpg">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-5 col-lg-7 col-md-8">
                            <div class="hero__text">
                                <h6>Extreme Stunts<</h6>
                                <h2 style="color:rgb(250, 250, 250)">Hot Wheels - The Next Generation</h2>
                                <p style="color:rgb(255, 0, 0)">From high-speed tracks to gravity-defying loops, Hot Wheels brings you the ultimate racing experience. Collect, race, and dominate the track!</p>
                                <a href="/shop" class="primary-btn">Shop now <span class="arrow_right"></span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="hero__items set-bg" data-setbg="img/hero/home5.jpg">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-5 col-lg-7 col-md-8">
                            <div class="hero__text">
                                <h6>Ultimate Speed</h6>
                                <h2 style="color:white">Hot Wheels – Pushing Limits</h2>
                                <p style="color:rgb(255, 3, 3)">Unleashing the fastest, most thrilling die-cast cars. Designed for collectors, built for racers—experience the adrenaline of true speed.</p>
                                <a href="#" class="primary-btn">Shop now <span class="arrow_right"></span></a>
                                <div class="hero__social">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-pinterest"></i></a>
                                    <a href="#"><i class="fa fa-instagram"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="banner spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-7 offset-lg-4">
                    <div class="banner__item">
                        <div class="banner__item__pic">
                            <img src="img/banner/sub 6.jpg" alt="">
                        </div>
                        <div class="banner__item__text">
                            <h2>Speedster Collection</h2>
                            <a href="#">Shop now</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="banner__item banner__item--middle">
                        <div class="banner__item__pic">
                            <img src="img/banner/sub 9.jpg" alt="">
                        </div>
                        <div class="banner__item__text">
                            <h2>Neon Nitro Collection</h2>
                            <a href="#">Shop now</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="banner__item banner__item--last">
                        <div class="banner__item__pic">
                            <img src="img/banner/sub 7.jpg" alt="">
                        </div>
                        <div class="banner__item__text">
                            <h2>Turbocharged Collection</h2>
                            <a href="#">Shop now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="filter__controls">
                        
                        <li data-filter=".new-arrivals" class="text-dark">New Arrivals</li>

                    </ul>
                </div>
            </div>
            <div class="row product__filter">
                <% for(let i = 0; i < products.length; i++) { %>
                  <div class="col-lg-3 col-md-4 col-12 col-sm-6 mb-4">
                    <div class="product-card-simple shadow-sm p-3 rounded text-center h-100">
              
                      <a href="/productDetails?id=<%= products[i]._id %>">
                        <img src="/uploads/re-image/<%= products[i].productImage[0] %>" 
                             alt="<%= products[i].productName %>" 
                             class="img-fluid rounded mb-3 product-img-hover" />
                      </a>
              
                      <h6 class="fw-semibold mb-1 text-dark">
                        <a href="/productDetails?id=<%= products[i]._id %>" class="text-decoration-none text-white">
                          <%= products[i].productName %>
                        </a>
                      </h6>
              
                      <h5 class="text-danger mb-0">₹<%= products[i].salesPrice %></h5>
              
                    </div>
                  </div>
                <% } %>
              </div>
              
        </div>
    </section>
    <%-include("../../views/partials/user/footer")%>
    