
<%-include("../../views/partials/user/header")%>
    <!-- Header Section End -->
<style>
    .banner__item__pic img {
    width: 100%;
    height: 500px; /* Adjust this based on the actual middle image height */
    object-fit: cover;
}
</style>
    <!-- Hero Section Begin -->
    <section class="hero">
        <div class="hero__slider owl-carousel">
            <div class="hero__items set-bg" data-setbg="img/hero/home10.jpg">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-5 col-lg-7 col-md-8">
                            <div class="hero__text">
                                <h6>Extreme Stunts<</h6>
                                <h2 style="color:rgb(250, 250, 250)">Hot Wheels - The Next Generation</h2>
                                <p style="color:rgb(255, 0, 0)">From high-speed tracks to gravity-defying loops, Hot Wheels brings you the ultimate racing experience. Collect, race, and dominate the track!</p>
                                <a href="#" class="primary-btn">Shop now <span class="arrow_right"></span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="hero__items set-bg" data-setbg="img/hero/home5.jpg">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-5 col-lg-7 col-md-8">
                            <div class="hero__text">
                                <h6>Ultimate Speed</h6>
                                <h2 style="color:white">Hot Wheels – Pushing Limits</h2>
                                <p style="color:rgb(255, 3, 3)">Unleashing the fastest, most thrilling die-cast cars. Designed for collectors, built for racers—experience the adrenaline of true speed.</p>
                                <a href="#" class="primary-btn">Shop now <span class="arrow_right"></span></a>
                                <div class="hero__social">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-pinterest"></i></a>
                                    <a href="#"><i class="fa fa-instagram"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Hero Section End -->

    <!-- Banner Section Begin -->
    <section class="banner spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-7 offset-lg-4">
                    <div class="banner__item">
                        <div class="banner__item__pic">
                            <img src="img/banner/sub 6.jpg" alt="">
                        </div>
                        <div class="banner__item__text">
                            <h2>Speedster Collection</h2>
                            <a href="#">Shop now</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="banner__item banner__item--middle">
                        <div class="banner__item__pic">
                            <img src="img/banner/sub 9.jpg" alt="">
                        </div>
                        <div class="banner__item__text">
                            <h2>Neon Nitro Collection</h2>
                            <a href="#">Shop now</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="banner__item banner__item--last">
                        <div class="banner__item__pic">
                            <img src="img/banner/sub 7.jpg" alt="">
                        </div>
                        <div class="banner__item__text">
                            <h2>Turbocharged Collection</h2>
                            <a href="#">Shop now</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Banner Section End -->

    <!-- Product Section Begin -->
    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="filter__controls">
                        
                        <li data-filter=".new-arrivals">New Arrivals</li>

                    </ul>
                </div>
            </div>
            <div class="row product__filter">
                <%for(let i=0;i<products.length;i++) {%>
                <div class="col-lg-3 col-md-4 col-12 col-sm-6">
                    <div class="product-cart-wrap mb-30">
                        <div class="product-img-action-wrap">
                            <div class="product-img product-img-zoom">
                                
                                <a href="/productDetails?id=<%=products[i]._id%>">
                                <img class="default-img"
                                src="/uploads/re-image/<%=products[i].productImage[0]%>"
                                alt="<%=products[i].productName%>">
                            </a>
                            </div>
                        </div>
                   <div class="product-action-1">
                    <a aria-label="Add to Wishlist" class="action-btn hover-up" href="/addToWishlist?id=<%products[i]._id%>"></a>
                   </div>
                   
                   <div class="product-content-wrap">
                    <h6><%=products[i].productName%></h6>
                    <h5><%=products[i].salesPrice%></h5>
                    <a href="/addToCart?id=<%=products[i]._id%>"></a>
                   </div>
                    </div>
                </div>
                <%}%>
            </div>
        </div>
    </section>
    <%-include("../../views/partials/user/footer")%>
    