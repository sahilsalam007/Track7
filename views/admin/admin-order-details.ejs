<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        :root {
            --primary-color: #4361ee;
            --secondary-color: #3f37c9;
            --success-color: #4cc9f0;
            --warning-color: #ffd60a;
            --danger-color: #ee1212;
            --light-bg: #f8f9fa;
            --text-dark: #2b2d42;
            --text-light: #edf2f4;
            --border-radius: 0.5rem;
            --card-shadow: 0 2px 15px rgba(0,0,0,0.05);
        }

        body {
            background-color: #f4f6f9;
            color: var(--text-dark);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 2rem;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: white;
            border-radius: var(--border-radius);
            box-shadow: var(--card-shadow);
            padding: 2rem;
        }

        h2 {
            color: var(--primary-color);
            font-weight: 600;
            margin-bottom: 1.5rem;
        }

        h3 {
            color: var(--secondary-color);
            margin: 1.5rem 0 1rem;
        }

        .order-info, .user-info, .address-info, .price-summary {
            background: var(--light-bg);
            border-radius: var(--border-radius);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: var(--card-shadow);
        }

        .status {
            padding: 0.5rem 1rem;
            border-radius: var(--border-radius);
            font-weight: 500;
            display: inline-block;
        }

        .pending { background-color: var(--warning-color); }
        .delivered { background-color: var(--success-color); color: white; }
        .cancelled { background-color: var(--danger-color); color: white; }
        .return-request { background-color: #f8d7da; color: #721c24; }
        .returned { background-color: #f8d7da; color: #721c24; }

        table {
            width: 100%;
            border-collapse: collapse;
            background: white;
            border-radius: var(--border-radius);
            overflow: hidden;
            box-shadow: var(--card-shadow);
            margin: 1.5rem 0;
        }

        th, td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid #f0f0f0;
        }

        thead {
            background-color: var(--primary-color);
            color: white;
        }

        .product-img {
            width: 70px;
            height: 70px;
            object-fit: contain;
            border-radius: calc(var(--border-radius) / 2);
            border: 1px solid #eee;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            background-color: var(--primary-color);
            color: white;
            text-decoration: none;
            border-radius: var(--border-radius);
            display: inline-block;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
        }

        .btn-success {
            background-color: #28a745;
        }

        .btn:hover {
            background-color: var(--secondary-color);
            transform: translateY(-2px);
            box-shadow: var(--card-shadow);
        }

        .btn-success:hover {
            background-color: #218838;
        }

        .price-summary p {
            display: flex;
            justify-content: space-between;
            max-width: 300px;
            margin: 0.5rem 0;
        }

        .price-summary strong {
            color: var(--text-dark);
            margin-right: 1rem;
        }

        @media (max-width: 768px) {
            body {
                padding: 1rem;
            }
            
            .container {
                padding: 1rem;
            }
            
            table {
                display: block;
                overflow-x: auto;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 style="color: rgb(243, 0, 0)">Order Details</h2>
        
        <div class="order-info">
            <p><strong>Order ID:</strong> <%= order.orderId %></p>
            <p><strong>Order Date:</strong> <%= new Date(order.createdOn).toLocaleString() %></p>
            <p><strong>Status:</strong> <span class="status <%= order.status.toLowerCase() %>"><%= order.status %></span></p>
        </div>

        <div class="user-info">
            <h3 style="color: rgb(238, 42, 42)">Customer Details</h3>
            <p><strong>Name:</strong> <%= order.userId.name %></p>
            <p><strong>Email:</strong> <%= order.userId.email %></p>
        </div>

        <div class="address-info">
            <h3 style="color: rgb(238, 42, 42)">Shipping Address</h3>
            <p><strong>Name:</strong> <%= order.address.name %></p>
            <p><strong>Address Type:</strong> <%= order.address.addressType %></p>
            <p><strong>City:</strong> <%= order.address.city %></p>
            <p><strong>State:</strong> <%= order.address.state %></p>
            <p><strong>Pincode:</strong> <%= order.address.pincode %></p>
            <p><strong>Phone:</strong> <%= order.address.phone %></p>
        </div>

        <div class="ordered-items">
            <h3 style="color: rgb(238, 42, 42)">Ordered Products</h3>
            <table>
                <thead style="background-color: black; color: white">
                    <tr>
                        <th>Image</th>
                        <th>Product</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Return Reason</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% order.orderedItems.forEach(item => { %>
                        <tr>
                            <td><img src="/Uploads/re-image/<%= item.product.productImage[0] %>" alt="Product Image" class="product-img"></td>
                            <td><%= item.product.productName %></td>
                            <td><%= item.quantity %></td>
                            <td>₹<%= item.price.toFixed(2) %></td>
                            <td><span class="status <%= item.productStatus.toLowerCase() %>"><%= item.productStatus %></span></td>
                            <td><%= item.returnReason || '-' %></td>
                            <td>
                                <% if (item.productStatus === 'Return Request') { %>
                                    <form class="approve-return-form" data-order-id="<%= order._id %>" data-item-id="<%= item._id %>">
                                        <button type="submit" class="btn btn-success">✅ Approve Return & Refund</button>
                                    </form>
                                <% } %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <div class="price-summary">
            <h3 style="color: rgb(238, 42, 42)">Payment Summary</h3>
            <p><strong>Total Price:</strong> <span>₹<%= order.totalPrice.toFixed(2) %></span></p>
            <p><strong>Discount:</strong> <span>₹<%= order.discount.toFixed(2) %></span></p>
            <p><strong>Final Amount:</strong> <span>₹<%= order.finalAmount.toFixed(2) %></span></p>
            <p><strong>Payment Method:</strong> <span><%= order.payment.method %></span></p>
        </div>

        <a href="/admin/orders" class="btn" style="background-color: #000000; color: rgb(255, 255, 255);">Back to Orders</a>
    </div>

    <script>
        document.querySelectorAll('.approve-return-form').forEach(form => {
            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                const orderId = form.dataset.orderId;
                const itemId = form.dataset.itemId;

                try {
                    const response = await fetch('/admin/approve-item-return', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ orderId, itemId })
                    });
                    const data = await response.json();

                    if (data.success) {
                        Swal.fire({
                            title: 'Success!',
                            text: 'Item return approved successfully.',
                            icon: 'success',
                            confirmButtonColor: '#28a745'
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire({
                            title: 'Error!',
                            text: data.message || 'Failed to approve return.',
                            icon: 'error',
                            confirmButtonColor: '#d33'
                        });
                    }
                } catch (error) {
                    console.error('Error approving return:', error);
                    Swal.fire({
                        title: 'Error!',
                        text: 'Something went wrong. Please try again.',
                        icon: 'error',
                        confirmButtonColor: '#d33'
                    });
                }
            });
        });
    </script>
</body>
</html>