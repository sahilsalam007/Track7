<%- include("../../views/partials/admin/header") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Wallet</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
.card {
    border: none;
    border-radius: 15px;
    transition: transform 0.3s ease;
}

.card:hover {
    transform: translateY(-5px);
}

.text-success {
    color: #28a745 !important;
    font-weight: 500;
}

.text-danger {
    color: #dc3545 !important;
    font-weight: 500;
}

.pagination .page-item.active .page-link {
    background-color: #007bff;
    border-color: #007bff;
}

.shadow-lg {
    box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.175) !important;
}
    .wallet-table-container {
        border-radius: 16px;
        overflow: hidden;
        background: linear-gradient(to bottom, rgba(255,255,255,0.6), rgba(255,255,255,0.3));
        backdrop-filter: blur(10px);
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
    }

    .wallet-table thead {
        background-color: rgba(30, 41, 59, 0.85); /* Navy-ish */
        color: #fff;
    }

    .wallet-table tbody tr {
        transition: background 0.2s ease-in-out;
    }

    .wallet-table tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.03);
    }

    .wallet-table td, .wallet-table th {
        border: none;
    }

    .wallet-table td {
        padding: 1rem 0.75rem;
    }

    .wallet-table .indent {
        padding-left: 2.5rem;
    }

    .wallet-table .btn {
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
    
       
    
         
    </style>
    
</head>
<body>
    <section class="content-main">
        <div class="content-header">
            <h2 class="content-title">Wallet Transactions</h2>
        </div>
    
        <div class="card mb-4">
            <div class="card-body">
                <div class="row"> 
                    <!-- Wallet Summary Cards -->
                    <div class="col-md-4 mb-4">
                        <div class="card bg-white text-white shadow-lg">
                            <div class="card-body">
                                <h5 class="card-title">Total Balance</h5>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-wallet fa-3x me-3" style="color: #070707;"></i>
                                    <h2 class="mb-0 <%= (totalCredits - totalDebits) >= 0 ? 'text-success' : 'text-danger' %>">
                                        ₹<%= (totalCredits - totalDebits).toLocaleString('en-IN') %>
                                    </h2>
                                </div>
                            </div>
                        </div>
                    </div> 
    
                     <div class="col-md-4 mb-4">
                        <div class="card bg-success text-white shadow-lg">
                            <div class="card-body">
                                <h5 class="card-title">Total Credits</h5>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-arrow-down fa-3x me-3"></i>
                                    <h2 class="mb-0">₹<%=totalCredits%></h2>
                                </div>
                            </div>
                        </div>
                    </div>
    
                    <div class="col-md-4 mb-4">
                        <div class="card bg-danger text-white shadow-lg">
                            <div class="card-body">
                                <h5 class="card-title">Total Debits</h5>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-arrow-up fa-3x me-3"></i>
                                    <h2 class="mb-0">₹<%=totalDebits%></h2>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
    
                <!-- Transaction History Table -->
                <div class="table-responsive wallet-table-container">
    <table class="table table-hover align-middle wallet-table" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
        <thead class="table-dark" style="font-size: 0.95rem;">
            <tr>
                <th style="width: 15%; min-width: 150px;">Date</th>
                <th style="width: 15%;">Transaction ID</th>
                <th style="width: 40%;">Customer</th>
                <th style="width: 15%;">Type</th>
                <th style="width: 15%;">Amount</th>
                <th style="width: 10%; text-align: end;">Actions</th>
            </tr>
        </thead>
        <tbody style="font-size: 0.9rem;">
            <% transactions.forEach(txn => { %>
                <tr style="vertical-align: middle; height: 60px;">
                    <td style="font-weight: 500; color: #4a4a4a;">
                        <%= new Date(txn.transactions.createdAt).toLocaleDateString('en-IN', { year: 'numeric', month: 'long', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %>
                    </td>

                    <td style="color: #6c757d; font-family: 'Courier New', Courier, monospace;">
                        #<%= txn.transactions._id %>
                    </td>

                    <td class="indent">
                        <%= txn.user?.name || "Unknown User" %><br>
                        <small style="color: grey;"><%= txn.user?.email || "No Email" %></small>
                    </td>

                    <td style="max-width: 300px; white-space: normal;">
                        <%= txn.transactions.description %>
                    </td>

                    <td>
                        <span class="badge <%= txn.transactions.type === 'credit' ? 'bg-success' : 'bg-danger' %>" 
                            style="font-size: 0.8rem; padding: 0.5em 0.75em; border-radius: 8px;">
                            <%= txn.transactions.type.charAt(0).toUpperCase() + txn.transactions.type.slice(1) %>
                        </span>
                    </td>

                    <td class="<%= txn.transactions.type === 'credit' ? 'text-success' : 'text-danger' %>" 
                        style="font-weight: 600; font-size: 1rem;">
                        <%= txn.transactions.type === 'credit' ? '+ ' : '- ' %>₹<%= txn.transactions.amount %>
                    </td>

                    <td style="text-align: end;">
                        <% if (txn.transactions.orderId) { %>
                            <a href="/admin/order-details/<%= txn.transactions.orderId %>" 
                                class="btn btn-sm btn-info" 
                                style="padding: 0.25rem 0.75rem; font-size: 0.85rem;">
                                View Order
                            </a>
                        <% } else { %>
                            <a href="/admin/wallet-details?transactionId=<%= txn.transactions._id %>" 
                                class="btn btn-sm btn-primary" 
                                style="padding: 0.25rem 0.75rem; font-size: 0.85rem;">
                                View Details
                            </a>
                        <% } %>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>
                 Pagination 
                 <nav class="mt-4">
                    <ul class="pagination justify-content-center">
                        <!-- Previous Button -->
                        <li class="page-item <%= currentPage <= 1 ? 'disabled' : '' %>">
                            <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                        </li> 
                
                        <!-- Page Numbers -->
                         <% for(let i = 1; i <= totalPages; i++) { %>
                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %> 
                
                        <!-- Next Button -->
                        <li class="page-item <%= currentPage >= totalPages ? 'disabled' : '' %>">
                            <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                        </li>
                    </ul>
                </nav>
                
            </div>
        </div>
    </section>
    <script>
       
    </script>
</body>
</html> 
<%- include("../../views/partials/admin/footer") %>